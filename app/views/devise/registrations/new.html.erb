<section class="hero is-info">
  <div>
    <h1 class="title">
      新規登録画面
    </h1>
  </div>
</section>

<section class="section">
  <div class="container">
    <div>
      <div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
          <%= f.label :username, class: "label" %>
          <p>
            <%= f.text_field :username, autofocus: true, autocomplete: "email", :placeholder => "username", class: "input" %>
            <span>
              <i class="fas fa-user"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <%= f.label :email %>
          <p class="control has-icons-left">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email" %>
            <span >
              <i class="fas fa-envelope"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <p>
          <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password", class: "input" %>
            <span>
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <p>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation" %>
            <span>
              <i class="fas fa-lock"></i>
            </span>
          </p>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</section>
